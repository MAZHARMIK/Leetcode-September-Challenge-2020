class Solution {
public:
    int findPoisonedDuration(vector<int>& timeSeries, int duration) {
        int n = timeSeries.size();
        if( n == 0)
            return 0;
        if(n == 1)
            return duration;
        
        int time = 0;
        for(int i = 1; i<n; i++) {
            if(timeSeries[i-1]+duration <= timeSeries[i]) {
                time += duration;
            } else {
                time += timeSeries[i] - timeSeries[i-1];
            }
        }
        return time+duration;
    }
};
